<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PimpMyTeam.MemberCrudPage" Title="{Binding Name}">
    <ScrollView>
        <StackLayout x:Name="memberCrudStack" Margin="20" VerticalOptions="StartAndExpand">
            <Label Text="First name" />
            <Entry Text="{Binding FirstName}" />
            <Label Text="Last name" />
            <Entry Text="{Binding LastName}" />
            <Label Text="Email" />
            <Entry Text="{Binding Email}" />
            <Label Text="Phone number" />
            <Entry Text="{Binding PhoneNumber}" />
            <Button Text="Teams" Clicked="OnTeamsClicked" />
            <Button Text="Save" Clicked="OnSaveClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>